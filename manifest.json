{

  "manifest_version": 2,
  "name": "extension logging",
  "description": "view extension activity",
  "version": "1.0",

  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_title": "View Extensions Activity",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "activityLog",
    "tabs"
  ]
}
